<?xml version="1.0" encoding="utf-8"?>
<nawork_uri>
	<general>
		<!-- use disable option to disable nawork_uri completely, e.g. for a special domain, this also disables the path lookup -->
		<disable>1</disable>
		<append>/</append>
		<castTypeToInt>1</castTypeToInt>
		<castLToInt>1</castLToInt>
		<redirectOnParameterDiff>1</redirectOnParameterDiff>
		<redirectStatus>301</redirectStatus>
	</general>

	<transliteration>
		<!--
		<char from="ä" to="ae" />
		<char from="ö" to="oe" />
		<char from="ü" to="ue" />
		<char from="Ä" to="ae" />
		<char from="Ö" to="oe" />
		<char from="Ü" to="ue" />
		-->
		<!-- cyrillic (russian) transliterations, not supported by glibc :: begin-->
		<char from="а" to="a" />
		<char from="б" to="b" />
		<char from="в" to="v" />
		<char from="г" to="g" />
		<char from="д" to="d" />
		<char from="е" to="e" />
		<char from="ж" to="z" />
		<char from="з" to="z" />
		<char from="и" to="i" />
		<char from="й" to="j" />
		<char from="к" to="k" />
		<char from="л" to="l" />
		<char from="м" to="m" />
		<char from="н" to="n" />
		<char from="о" to="o" />
		<char from="п" to="p" />
		<char from="р" to="r" />
		<char from="с" to="s" />
		<char from="т" to="t" />
		<char from="у" to="u" />
		<char from="ф" to="f" />
		<char from="х" to="ch" />
		<char from="ц" to="c" />
		<char from="ч" to="c" />
		<char from="ш" to="s" />
		<char from="щ" to="s" />
		<char from="э" to="e" />
		<char from="ю" to="ju" />
		<char from="я" to="ja" />

		<char from="А" to="a" />
		<char from="Б" to="b" />
		<char from="В" to="v" />
		<char from="Г" to="g" />
		<char from="Д" to="d" />
		<char from="Е" to="e" />
		<char from="Ж" to="z" />
		<char from="З" to="z" />
		<char from="И" to="i" />
		<char from="Й" to="j" />
		<char from="К" to="k" />
		<char from="Л" to="l" />
		<char from="М" to="m" />
		<char from="Н" to="n" />
		<char from="О" to="o" />
		<char from="П" to="p" />
		<char from="Р" to="r" />
		<char from="С" to="s" />
		<char from="Т" to="r" />
		<char from="У" to="u" />
		<char from="Ф" to="f" />
		<char from="Х" to="z" />
		<char from="Ц" to="c" />
		<char from="Ч" to="c" />
		<char from="Ш" to="s" />
		<char from="Щ" to="s" />
		<char from="Э" to="e" />
		<char from="Ю" to="ju" />
		<char from="Я" to="ja" />
		<!-- cyrillic (russian) transliterations, not supported by glibc :: end -->
	</transliteration>

	<pagenotfound>
		<status>HTTP/1.0 404 Not Found</status>
		<!--
		<status domain="www.domain.tld">HTTP/1.0 404 Not Found</status>
		<behavior type="message"><![CDATA[ <h1>Page not found!</h1> ]]></behavior>
		<behavior type="redirect">http://www.domain.tld/?id=notfound</behavior>
		<behavior type="page">http://www.domain.tld/?id=notfound</behavior>
		<behavior type="page" domain="www.domain.tld">http://www.domain.tld/index.php?id=notfound</behavior>
		-->
		<behavior type="message"><![CDATA[ <h1>Page not found!</h1> ]]></behavior>
	</pagenotfound>

	<parameters>
		<param name="cHash">
			<type>hidden</type>
		</param>

		<param name="no_cache">
			<type>hidden</type>
		</param>

		<param name="L">
			<type>valuemap</type>
			<valuemap>
				<value key="0" remove="1"></value>
				<value key="1">en</value>
				<value key="2">fr</value>
			</valuemap>
		</param>

		<param name="id">
			<type>userfunc</type>
			<userfunc>EXT:nawork_uri/Classes/Transformer.php:Tx_NaworkUri_Transformer->makePagePath</userfunc>
			<config>
				<field>nav_title//title</field>
			</config>
		</param>

		<!-- param type plain is just put in the path with its value, but can be wrapped with a specific depending on the language -->
		<param name="tx_ttnews[pointer]">
			<type>plain</type>
			<wrap>page-|</wrap>
			<wrap language="de">seite-|</wrap>
		</param>

		<param name="tx_ttnews[tt_news]">
			<type>database</type>
			<table>tx_ttnews</table>
			<fields>title</fields>
			<!-- can also be:
			<fields>{subtitle//title}-{uid}</fields>
			to use subtitle if it exists or title and append the uid with a "-"
			-->
			<whereField>uid</whereField>
			<!-- can also be:
			<whereField type="string">some_field_here<whereField>
			if you want to match against a string field
			-->
			<!-- you can also wrap this parameter's transformation -->
			<wrap>news-|</wrap>
		</param>

		<param name="tx_abcourses_pi1[eventId]">
			<type>database</type>
			<table>tx_abcourses_event</table>
			<fields>{title}-{date}</fields>
			<selectFields>title, FROM_UNIXTIME(coursestart, '%Y-%m-%d') as date</selectFields>
			<foreignTable>tx_abcourses_course</foreignTable>
			<mmTable>tx_abcourses_event_course_mm</mmTable>
			<whereField>uid</whereField>
		</param>

		<param name="type">
			<type>valuemap</type>
			<valuemap>
				<value key="0"></value>
				<value key="98">print</value>
				<value key="99">text</value>
			</valuemap>
		</param>
	</parameters>
</nawork_uri>
