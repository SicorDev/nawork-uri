<?xml version="1.0" encoding="utf-8"?>
<nawork_uri>

	<append>/</append>
	<castTypeToInt>1</castTypeToInt>
	<castLToInt>1</castLToInt>
	<redirectOnParameterDiff>1</redirectOnParameterDiff>
	<redirectStatus>301</redirectStatus>
	<transliteration>
		<!--
		<char from="ä" to="ae" />
		<char from="ö" to="oe" />
		<char from="ü" to="ue" />
		<char from="Ä" to="ae" />
		<char from="Ö" to="oe" />
		<char from="Ü" to="ue" />
		-->
		<!-- cyrillic (russian) transliterations, not supported by glibc :: begin-->
		<char from="а" to="a" />
		<char from="б" to="b" />
		<char from="в" to="v" />
		<char from="г" to="g" />
		<char from="д" to="d" />
		<char from="е" to="e" />
		<char from="ж" to="z" />
		<char from="з" to="z" />
		<char from="и" to="i" />
		<char from="й" to="j" />
		<char from="к" to="k" />
		<char from="л" to="l" />
		<char from="м" to="m" />
		<char from="н" to="n" />
		<char from="о" to="o" />
		<char from="п" to="p" />
		<char from="р" to="r" />
		<char from="с" to="s" />
		<char from="т" to="t" />
		<char from="у" to="u" />
		<char from="ф" to="f" />
		<char from="х" to="ch" />
		<char from="ц" to="c" />
		<char from="ч" to="c" />
		<char from="ш" to="s" />
		<char from="щ" to="s" />
		<char from="э" to="e" />
		<char from="ю" to="ju" />
		<char from="я" to="ja" />

		<char from="А" to="a" />
		<char from="Б" to="b" />
		<char from="В" to="v" />
		<char from="Г" to="g" />
		<char from="Д" to="d" />
		<char from="Е" to="e" />
		<char from="Ж" to="z" />
		<char from="З" to="z" />
		<char from="И" to="i" />
		<char from="Й" to="j" />
		<char from="К" to="k" />
		<char from="Л" to="l" />
		<char from="М" to="m" />
		<char from="Н" to="n" />
		<char from="О" to="o" />
		<char from="П" to="p" />
		<char from="Р" to="r" />
		<char from="С" to="s" />
		<char from="Т" to="r" />
		<char from="У" to="u" />
		<char from="Ф" to="f" />
		<char from="Х" to="z" />
		<char from="Ц" to="c" />
		<char from="Ч" to="c" />
		<char from="Ш" to="s" />
		<char from="Щ" to="s" />
		<char from="Э" to="e" />
		<char from="Ю" to="ju" />
		<char from="Я" to="ja" />
		<!-- cyrillic (russian) transliterations, not supported by glibc :: end -->

		<!-- polisch diactric characters :: begin -->
		<char from="Ą" to="A" />
		<char from="Ć" to="C" />
		<char from="Ę" to="E" />
		<char from="Ł" to="L" />
		<char from="Ń" to="N" />
		<char from="Ó" to="O" />
		<char from="Ś" to="S" />
		<char from="Ź" to="Z" />
		<char from="Ż" to="Z" />
		
		<char from="ą" to="a" />
		<char from="ć" to="c" />
		<char from="ę" to="e" />
		<char from="ł" to="l" />
		<char from="ń" to="n" />
		<char from="ó" to="o" />
		<char from="ś" to="s" />
		<char from="ź" to="z" />
		<char from="ż" to="z" />		
		<!-- polisch diactric characters :: end -->
	</transliteration>

	<pagenotfound>
		<status>HTTP/1.0 404 Not Found</status>
		<!--
		<status domain="www.domain.tld">HTTP/1.0 404 Not Found</status>
		<behavior type="message"><![CDATA[ <h1>Page not found!</h1> ]]></behavior>
		<behavior type="redirect">http://www.domain.tld/?id=notfound</behavior>
		<behavior type="page">http://www.domain.tld/?id=notfound</behavior>
		<behavior type="page" domain="www.domain.tld">http://www.domain.tld/index.php?id=notfound</behavior>
		-->
		<behavior type="message"><![CDATA[ <h1>Page not found!</h1> ]]>
		</behavior>
	</pagenotfound>
	
	<pageNotAccessible>
		<status>HTTP/1.0 403 Forbidden</status>
		<behavior type="message"><![CDATA[<html><head><title>403 Forbidden</title></head><body><h1>Forbidden!</h1><p>You don't have the permission to access the requested page</p></body></html>]]></behavior>
	</pageNotAccessible>


	<!-- define fixed uri segments -->
	<predefinedparts>
		<!-- ignore these parameters in uri -->
		<part>
			<parameter>tx_ttnews[backPid]</parameter>
		</part>
		<part>
			<parameter>cHash</parameter>
		</part>
		<part>
			<parameter>no_cache</parameter>
		</part>
		<part key="predef_uri_part">
			<parameter>predef_uri_value</parameter>
			<value>1</value>
		</part>
		<!-- /number-123/.. >> &number=123 -->
		<part key="number-###">
			<parameter>number</parameter>
		</part>
	</predefinedparts>

	<!-- pagetree >> path -->
	<!-- @TODO add localisation of pagepath based on laguage -->
	<pagepath>
		<field>alias,subtitle,title</field>
		<limit>100</limit>
	</pagepath>

	<!-- remap parameters to db values -->
	<uriparts>
		<part>
			<parameter>tx_ttnews[tt_news]</parameter>
			<field>title</field>
			<table>tt_news</table>
			<where>uid=###</where>
		</part>
		<part>
			<parameter>pages[test]</parameter>
			<field>subtitle//title</field>
			<table>pages</table>
			<where>uid=###</where>
		</part>
		<part>
			<parameter>pages[test2]</parameter>
			<field>{subtitle//title}-{uid}--{pid}</field>
			<table>pages</table>
			<where>uid='###'</where>
		</part>
		<part>
			<parameter>pages[test3]</parameter>
			<field>{title}</field>
			<table>pages</table>
			<where>uid='###'</where>
		</part>
		<part>
			<parameter>pages[title]</parameter>
			<field>title-{uid}</field>
			<table>pages</table>
			<where>title="###"</where>
		</part>
		<part>
			<parameter>tx_standocuments_pi_details[doc]</parameter>
			<field>number//title</field>
			<table>tx_standocuments_documents</table>
			<where>uid=###</where>
		</part>

	</uriparts>

	<!-- remap parameters to constant values -->
	<valuemaps>
		<valuemap>
			<parameter>L</parameter>
			<value key="" remove="1" >0</value>
			<value key="en">1</value>
		</valuemap>
		<valuemap>
			<parameter>type</parameter>
			<value key="" remove="1" >0</value>
			<value key="text">50</value>
			<value key="pdf">55</value>
		</valuemap>
	</valuemaps>

	<!-- define the order of parameter path segments -->
	<paramorder>
		<param>L</param>
		<param>id</param>
		<param>type</param>
	</paramorder>

</nawork_uri>
